# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

set $base        #1e1e2e
set $mantle      #181825
set $crust       #11111b
set $text        #cdd6f4
set $subtext     #a6adc8
set $red         #f38ba8
set $green       #a6e3a1
set $yellow      #f9e2af
set $blue        #89b4fa
set $magenta     #cba6f7
set $cyan        #94e2d5
set $overlay     #6c7086

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Bar (matches i3status Catppuccin)
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

bar {
    status_command i3status --config ~/.config/i3/i3status.conf
    tray_output none
    font pango:JetBrainsMono Nerd Font 13
    position top

    colors {
        background $base
        statusline $text
        separator  $overlay

        focused_workspace  $blue $blue $crust
        active_workspace   $mantle $mantle $text
        inactive_workspace $mantle $base $subtext
        urgent_workspace   $red $red $crust
        binding_mode       $base $yellow $crust
    }
}
